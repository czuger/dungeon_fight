.page-header
  = link_to s_skills_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    =t('back')
  = link_to edit_s_skill_path(@s_skill), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    =t('edit')
  %h1= t('.show')

%dl.dl-horizontal
  %dt=t('s_skill.name').capitalize+':'
  %dd= @s_skill.name
  %dt=t('s_skill.desc').capitalize+':'
  %dd= @s_skill.desc
  %dt=t('s_skill.difficulty').capitalize+':'
  %dd= @s_skill.difficulty
