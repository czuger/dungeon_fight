= form_for @s_skill, html: { class: "form-horizontal", role: "form" } do |f|
  -if @s_skill.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@s_skill.errors.count, "error")} prohibited this s_skill from being saved:"

      %ul
        - @s_skill.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label t('s_skill.name'), class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label t('s_skill.desc'), class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :desc, class: 'form-control'
  .form-group
    = f.label t('s_skill.difficulty'), class: 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :difficulty, class: 'form-control'

  .form-group
    = f.label t('s_skill.first_attribute'), class: 'col-sm-2 control-label'
    .col-sm-10
      = f.radio_button( 'first_attribute', 'fo' )
      = t('d_dungeoneer.fo').capitalize
      %br
      = f.radio_button( 'first_attribute', 'coo' )
      = t('d_dungeoneer.coo').capitalize
      %br
      = f.radio_button( 'first_attribute', 'mem' )
      = t('d_dungeoneer.mem').capitalize
      %br
      = f.radio_button( 'first_attribute', 'vol' )
      = t('d_dungeoneer.vol').capitalize

  .form-group
    = f.label t('s_skill.second_attribute'), class: 'col-sm-2 control-label'
    .col-sm-10
      = f.radio_button( 'second_attribute', 'fo' )
      = t('d_dungeoneer.fo').capitalize
      %br
      = f.radio_button( 'second_attribute', 'coo' )
      = t('d_dungeoneer.coo').capitalize
      %br
      = f.radio_button( 'second_attribute', 'mem' )
      = t('d_dungeoneer.mem').capitalize
      %br
      = f.radio_button( 'second_attribute', 'vol' )
      = t('d_dungeoneer.vol').capitalize

  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit value: t(:validate), class: 'btn btn-primary'
